<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.robert.robertlyon.guitarFretboardTrainer">

    <application
        android:allowBackup="true"
        android:icon="@drawable/fretboard_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/fretboard_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.robert.robertlyon.guitarFretboardTrainer.StartScreen" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.robert.robertlyon.guitarFretboardTrainer.MainActivity" android:screenOrientation="landscape">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>